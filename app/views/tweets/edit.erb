<% if is_logged_in? && (current_user.id == @tweet.user_id) %>
  <label>Edit Your Tweet:</label><br>
  
  <form action='/tweets/<%=@tweet.id%>' method="post">
    
    <input type='hidden' id='hidden' name='_method' value='patch'>
    
    <input type="text" name="content" value="<%=@tweet.content%>"><br><br>

    <input type="submit" value="submit">

  </form>

<% elsif is_logged_in? && (current_user.id != @tweet.user_id) %>

    <h1> You May Only Edit Your Own Tweets </h1>
    
<% else %>

    <h1> You Must Be Logged in to Edit Tweets </h1>
    
<% end %>